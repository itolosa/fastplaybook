#
#   Ensure the SQLite 3 gem is defined in your Gemfile
#   gem 'sqlite3'
development:
  adapter: postgresql
  database: {{ app_name }}_development
  username: {{ db_username }}
  password: {{ db_password }}
  pool: {{ db_pool }}
  timeout: {{ db_timeout }}
  host: {{ db_host }}
  port: {{ db_port }}

# Warning: The database defined as "test" will be erased and
