test:
  adapter: postgresql
  database: {{ app_name }}_test
  username: {{ db_username }}
  password: {{ db_password }}
  pool: {{ db_pool }}
  timeout: {{ db_timeout }}
  host: {{ db_host }}
  port: {{ db_port }}
  
